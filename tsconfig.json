{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": false,
        "importHelpers": false,
        "declaration": true,
        "sourceMap": true,
        "lib": [
            "es5",
            "dom",
            "es2015.core",
            "es2015.collection",
            "es2015.iterable",
            "es2015.promise"
        ],
        "baseUrl": ".",
        "paths": {
            "*": [
                "./node_modules/*"
            ]
        }
    },
    "exclude": [
        "e2e",
        "node_modules"
    ]
}